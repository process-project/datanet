<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with
		type="pl.cyfronet.datanet.web.client.widgets.mainpanel.MainPanelMessages"
		field="messages" />
	<ui:style
		type="pl.cyfronet.datanet.web.client.widgets.mainpanel.MainPanelWidget.MainPanelWidgetStyles">
			.main-panel {
				margin: 20px auto;
				width: 80%;
			}
			
			.logout-button {
				float: right;
			}
			
			.datanet-label {
				float: left;
			}
			
			.header {
				margin: 3px;
			}
			
			.errorLabel {
				color: white;
				background-color: red;
				font-weight: bold;
				float: left;
				padding: 2px;
				margin-left: 20em;
			}
			
			.infoLabel {
				color: white;
				background-color: green;
				font-weight: bold;
				float: left;
				padding: 2px;
				margin-left: 20em;
			}
		</ui:style>
	<g:DockLayoutPanel>
		<g:north size="40">
			<g:FlowPanel styleName="{style.header}">
				<g:Label styleName="gwt-Label {style.datanet-label}" text="{messages.datanetMain}" />
				<g:Label ui:field="messageLabel" styleName="gwt-Label {style.errorLabel}"
					visible="false" />
				<g:Button ui:field="logout" text="{messages.logout}"
					styleName="gwt-Button {style.logout-button}"></g:Button>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:TabLayoutPanel barHeight="25">
				<g:tab>
					<g:header>
						<ui:text from="{messages.models}" />
					</g:header>
					<g:LayoutPanel ui:field="modelsPanel" />
				</g:tab>
				<g:tab>
					<g:header>
						<ui:text from="{messages.repositories}" />
					</g:header>
					<g:LayoutPanel ui:field="repositoriesPanel" />
				</g:tab>
			</g:TabLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>