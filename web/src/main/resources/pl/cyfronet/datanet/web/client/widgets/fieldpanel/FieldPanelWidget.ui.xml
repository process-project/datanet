<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="pl.cyfronet.datanet.web.client.widgets.fieldpanel.FieldPanelMessages" field="messages"/>
	<ui:style>
		.remove {
			margin-left: 1em;
		}
	</ui:style>
	<g:FlowPanel>
		<g:TextBox ui:field="name"/>
		<g:ListBox ui:field="type"/>
		<g:CheckBox ui:field="required" text="{messages.required}"/>
		
		<g:Button ui:field="remove" text="{messages.removeField}" styleName="gwt-Button {style.remove}"/>
	</g:FlowPanel>
</ui:UiBinder>