<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="pl.cyfronet.datanet.web.client.widgets.fieldpanel.FieldPanelMessages" field="messages"/>
	<ui:style>
		.action {
			margin-left: 5px;
			margin-top: 5px;
			cursor: pointer;
		}
	</ui:style>
	<g:FlowPanel>
		<g:TextBox ui:field="name"/>
		<g:ListBox ui:field="type"/>
		<g:CheckBox ui:field="required" text="{messages.required}"/>
		<g:Image ui:field="remove" url="img/delete-field.png" title="{messages.removeField}" styleName="gwt-Image {style.action}"/>
	</g:FlowPanel>
</ui:UiBinder>