<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with
		type="pl.cyfronet.datanet.web.client.widgets.modeltree.ModelTreePanelMessageses"
		field="messages" />
	<ui:style>
		.main {
			margin: 15px;			
			border-radius: 10px;
			box-shadow: 0px 0px 5px #888888;
		}

		.buttons {
			text-align: center;
			background-color: #F5F5F5;
			padding: 15px;			
			border-radius: 10px 10px 0 0;
			height: 30px;
		}

		.tree {
			margin: 5px;
		}
	</ui:style>
	<g:FlowPanel addStyleNames="{style.main}">
		<g:FlowPanel styleName="{style.buttons}">
			<b:ButtonGroup>
				<b:Button ui:field="add" icon="PLUS" type="SUCCESS" size="MINI"></b:Button>
				<b:Button ui:field="remove" icon="REMOVE" type="DANGER" size="MINI" enabled="false"/>				
				<b:Button ui:field="save" icon="SAVE" size="MINI" enabled="false"/>
			</b:ButtonGroup>
		</g:FlowPanel>

		<c:CellTree ui:field="modelsTree" addStyleNames="{style.tree}"/>		
	</g:FlowPanel>
</ui:UiBinder>
