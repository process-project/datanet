<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="pl.cyfronet.datanet.web.client.widgets.entitypanel.EntityPanelMessages" field="messages"/>
	<ui:style>
		.entityPanel {
			margin: 5px;
			padding: 5px;
			float: left;
			border-radius: 10px;
			box-shadow: 0px 0px 5px #888888;
		}
		.section {
			margin: 5px;
		}
		.element {
			width: 7em;
			float: left;
			margin-right: 5px;
		}
		.action {
			margin-left: 5px;
			margin-top: 5px;
			cursor: pointer;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.entityPanel}">
		<g:FlowPanel styleName="{style.section}">
			<g:Label text="{messages.entityNameLabel}" styleName="{style.element}"/>
			<g:TextBox ui:field="entityName" styleName="gwt-TextBox {style.element}"/>
			<g:Image ui:field="removeEntity" url="img/delete-entity.png" title="{messages.removeEntityLabel}" styleName="gwt-Image {style.action}"/>
		</g:FlowPanel>
		<g:FlowPanel ui:field="fieldContainer"/>
		<g:FlowPanel styleName="{style.section}">
			<g:Image ui:field="newField" url="img/new-field.png" title="{messages.newFieldActionLabel}" styleName="gwt-Image {style.action}"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>