<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with
		type="pl.cyfronet.datanet.web.client.widgets.repositorybrowserpanel.RepositoryBrowserPanelMessages"
		field="messages" />
	<ui:style
		type="pl.cyfronet.datanet.web.client.widgets.repositorybrowserpanel.RepositoryBrowserPanelWidget.RepositoryBrowserPanelWidgetStyles">
		.repositoryLabel {
			cursor: pointer;
		}
		.marked {
			font-weight: bold;
		}
		.header {
			margin: 3px;
		}
		.action {
			margin-left: 5px;
			margin-top: 5px;
			cursor: pointer;
		}
	</ui:style>
	
	<g:DockLayoutPanel>
		<g:north size="40">
			<g:FlowPanel styleName="gwt-FlowPanel">
				<g:Image ui:field="undeployRepository" url="img/undeploy-model.png" title="{messages.undeployRepository}" styleName="gwt-Image {style.action}" />
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:SplitLayoutPanel>
				<g:west size="200">
					<g:StackLayoutPanel unit="EM">
						<g:stack>
							<g:header size="3">
								<ui:text from="{messages.repositories}" />
							</g:header>
							<g:ScrollPanel>
								<g:FlowPanel ui:field="repositoryListContainer" />
							</g:ScrollPanel>
						</g:stack>
					</g:StackLayoutPanel>
				</g:west>
				<g:center>
					<g:LayoutPanel ui:field="repositoryContainer"/>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>