<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type="pl.cyfronet.datanet.web.client.widgets.login.LoginMessages" field="messages"/>
	<ui:with type="pl.cyfronet.datanet.web.client.controller.AppProperties" field="constants"/>
	<ui:style>
		.loginPanel {
			margin-top: 100px;
			margin-right: auto;
			margin-left: auto;
			width: 30em;
			border-radius: 10px;
			box-shadow: 0px 0px 5px #888888;
			padding: 15px;
		}
		.logo {
			margin: 0px auto 20px;
			display: block;
		}
		.right {
			float: right;
		}
		.left {
			float: left;
		}
		.clear {
			clear: both;
		}
		.margin-bottom {
			margin-bottom: 20px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.loginPanel}">
	    <g:HTMLPanel addStyleNames="{style.margin-bottom}">
	        <b:Label addStyleNames="{style.right}"><ui:text from="{messages.versionLabel}"/>: <ui:text from="{constants.version}"/></b:Label>
	        <b:ButtonGroup toggle="radio" addStyleNames="{style.left}">
			    <b:Button ui:field="switchToPl" size="MINI">PL</b:Button>
			    <b:Button ui:field="switchToEn" size="MINI">EN</b:Button>
			</b:ButtonGroup>	        
			<div class="{style.clear}"></div>
	    </g:HTMLPanel>
	    <g:HTMLPanel>
	    	<g:Image url="img/datanet-logo-143x40.png" altText="{messages.datanetLogoAlt}" styleName="{style.logo}"/>
	    </g:HTMLPanel>
	    <b:TabPanel>
	    	<b:Tab heading="{messages.standardLoginTabLabel}" active="true">
	    		<g:HTMLPanel>
					<b:Form type="HORIZONTAL">
					    <b:Fieldset>
					        <b:ControlGroup>
					            <b:ControlLabel for="login"><ui:text from="{messages.loginLabel}"/></b:ControlLabel>
					            <b:Controls>
					                <b:TextBox ui:field="loginField" placeholder="{messages.loginGhostLabel}"/>
					            </b:Controls>
					        </b:ControlGroup>
					        <b:ControlGroup>
					            <b:ControlLabel for="password"><ui:text from="{messages.passwordLabel}"/></b:ControlLabel>
					            <b:Controls>
					                <b:PasswordTextBox ui:field="passwordField" placeholder="{messages.passwordGhostLabel}"/>
					            </b:Controls>
					        </b:ControlGroup>
					    </b:Fieldset>
					    <b:FormActions>
					        <b:Button type="PRIMARY" ui:field="loginButton" icon="SIGNIN" loadingText="&lt;i class='icon-spinner icon-spin'&gt;&lt;/i&gt; {messages.submitLabel}"><ui:text from="{messages.submitLabel}"/></b:Button>
					    </b:FormActions>
					</b:Form>
				</g:HTMLPanel>
	    	</b:Tab>
	    	<b:Tab heading="{messages.openIdLoginTabLabel}">
	    		<b:Form type="HORIZONTAL">
				    <b:Fieldset>
				        <b:ControlGroup>
				            <b:ControlLabel for="openIdLogin"><ui:text from="{messages.loginLabel}"/></b:ControlLabel>
				            <b:Controls>
				                <b:TextBox ui:field="openIdLoginField" placeholder="{messages.loginGhostLabel}"/>
				            </b:Controls>
				        </b:ControlGroup>
				    </b:Fieldset>
				    <b:FormActions>
				        <b:Button ui:field="openIdLoginButton" type="PRIMARY" icon="SIGNIN" loadingText="&lt;i class='icon-spinner icon-spin'&gt;&lt;/i&gt; {messages.openIdLoginLabel}"><ui:text from="{messages.openIdLoginLabel}"/></b:Button>
				    </b:FormActions>
				</b:Form>
	    	</b:Tab>
	    </b:TabPanel>
	    <b:Alert ui:field="errorLabel" type="ERROR" close="false" visible="false"/>
	</g:HTMLPanel>
</ui:UiBinder>